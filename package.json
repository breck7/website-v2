{
  "name": "websitev2",
  "version": "1.0.0",
  "description": "Source for https://www.mollywhite.net.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "build:html": "pug --pretty src/pug/pages --out dist",
    "build:css": "mkdir dist/css && cp -r src/sass/*.css dist/css && sass src/sass/:dist/css",
    "build:js": "mkdir dist/js && cp -r src/js/* dist/js",
    "build:misc": "cp -r src/misc/* dist/ && mkdir dist/images && cp -r src/images/* dist/images",
    "build": "npm run clean && npm run build:html && npm run build:css && npm run build:js && npm run build:misc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/molly/website-v2.git"
  },
  "author": "Molly White",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/molly/website-v2/issues"
  },
  "homepage": "https://github.com/molly/website-v2#readme",
  "devDependencies": {
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.3",
    "sass": "^1.20.3"
  }
}
